<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--indeterminateDrawable设置绘制不显示进度条的Drawable-->
    <style name="title_update_progessbar_style">
        <item name="android:maxWidth">50dip</item>
        <item name="android:maxHeight">50dip</item>
        <item name="android:minWidth">50dip</item>
        <item name="android:minHeight">50dip</item>
        <item name="android:indeterminateDrawable">
            @drawable/title_update_anim
        </item>
    </style>

</resources>
